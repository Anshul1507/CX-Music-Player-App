
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topx"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="About Developer"
            android:textColor="#33001a"
            android:textSize="22sp"
            android:id="@+id/titleapp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topx"
        android:id="@+id/topy"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/me"
            app:civ_border_width="2dp"
            android:layout_centerInParent="true"
            app:civ_border_color="#FF000000"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topy"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:text="Name:-"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:id="@+id/name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="Anshul Gupta"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:paddingLeft="5dp"
            android:textColor="#212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edu"
            android:textSize="16sp"
            android:layout_below="@id/name"
            android:text="Education:-"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studying B.Tech(Computer Engineer) From KIET"
            android:layout_toRightOf="@+id/edu"
            android:layout_below="@+id/name"
            android:textSize="16sp"
            android:paddingLeft="5dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_me"
        android:layout_width="match_parent"
        android:layout_below="@id/topy"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            android:text="Contact :-"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:id="@+id/contact_textView"
            />
        <LinearLayout
            android:id="@+id/icon_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fb_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/fb_icon"
            app:civ_border_width="2dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:layout_below="@id/contact_textView"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FF000000"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linkedin_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/linkedin_icon"
            app:civ_border_width="2dp"
            android:clickable="true"
            android:layout_toRightOf="@id/fb_icon"
            android:layout_below="@id/contact_textView"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FF000000"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/quora_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/qoura"
            app:civ_border_width="2dp"
            android:clickable="true"
            android:layout_toRightOf="@id/linkedin_icon"
            android:layout_below="@id/contact_textView"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FF000000"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/twitter_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            app:civ_border_width="2dp"
            android:clickable="true"
            android:layout_toRightOf="@id/quora_icon"
            android:layout_marginRight="20dp"
            android:layout_below="@id/contact_textView"
            android:layout_marginTop="10dp"
            app:civ_border_color="#FF000000"
            />
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>